<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <welcome-file-list>
        <welcome-file>login.jsp</welcome-file>
    </welcome-file-list>
    <servlet>
        <servlet-name>myObjectAdder</servlet-name>
        <servlet-class>com.mahan.Web.ObjectAdder</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>myObjectAdder</servlet-name>
        <url-pattern>/ObjectAdder</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>myStudent</servlet-name>
        <servlet-class>com.mahan.Web.StudentController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>myStudent</servlet-name>
        <url-pattern>/student/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>myTeacher</servlet-name>
        <servlet-class>com.mahan.Web.TeacherController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>myTeacher</servlet-name>
        <url-pattern>/teacher/*</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>myCourse</servlet-name>
        <servlet-class>com.mahan.Web.CourseController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>myCourse</servlet-name>
        <url-pattern>/course/*</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>myLoginController</servlet-name>
        <servlet-class>com.mahan.Web.LoginController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>myLoginController</servlet-name>
        <url-pattern>/loginController</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>myErrorHandler</servlet-name>
        <servlet-class>com.mahan.Web.ErrorHandler</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>myErrorHandler</servlet-name>
        <url-pattern>/ErrorHandler</url-pattern>
    </servlet-mapping>
</web-app>